{
  "name": "yarn-compose",
  "version": "0.0.12",
  "main": "lib",
  "types": "./lib/index.d.ts",
  "repository": {
    "url": "https://github.com/acao/yarn-compose"
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true
  },
  "description": "orchestrate node projects and linkages without a monorepo, using git",
  "license": "MIT",
  "keywords": [
    "yarn",
    "git",
    "multi-package",
    "polyrepo"
  ],
  "files": [
    "lib",
    "src",
    "cli"
  ],
  "bin": {
    "yarn-compose": "bin/yarn-compose"
  },
  "scripts": {
    "build": "rimraf lib && tsc",
    "dev": "ts-node src/cli",
    "prepublish": "yarn test && yarn test:int && yarn build",
    "test": "jest spec --coverage",
    "test:int": "jest int",
    "test:all": "yarn test && yarn test:int",
    "test:watch": "yarn test --watch",
    "pretty": "prettier src/**/*.{ts,json} --write"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/index.ts"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testEnvironment": "node",
    "modulePathIgnorePatterns": [
      "__tests__/fixtures/",
      "dist/"
    ],
    "testPathIgnorePatterns": [
      "__tests__/(fixtures|__mocks__)/"
    ]
  },
  "dependencies": {
    "ajv": "^6.10.0",
    "chalk": "^2.4.2",
    "execa": "^3.2.0",
    "js-yaml": "^3.13.1",
    "meow": "^5.0.0",
    "mkdirp": "^0.5.1",
    "pkginfo": "^0.4.1",
    "rimraf": "^3.0.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/execa": "^0.9.0",
    "@types/jest": "^24.0.13",
    "@types/js-yaml": "^3.12.1",
    "@types/meow": "^5.0.0",
    "@types/minimist-options": "^3.0.0",
    "@types/mkdirp": "^0.5.2",
    "@types/mocha": "^5.2.6",
    "@types/node": "^14.0.13",
    "@types/rimraf": "^2.0.2",
    "chai": "^4.2.0",
    "codecov": "^3.5.0",
    "jest": "^24.8.0",
    "prettier": "^1.17.1",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.1.0",
    "typescript": "^3.4.5"
  }
}
