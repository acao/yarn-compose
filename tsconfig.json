{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "outDir": "./lib",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "exclude": [
    "**/__tests__/*",
    "node_modules"
  ]
}
