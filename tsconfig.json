{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": { 
      "*": ["src/types/*"] 
    },
    "declaration": true,
    "target": "ES2017",
    "module": "commonjs",
    "outDir": "./lib",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "typeRoots": [
      "./src/types",
      "./node_modules/@types",
      "./node_modules/meow"
    ]
  },
  "exclude": [
    "**/__tests__/*",
    "node_modules"
  ]
}
